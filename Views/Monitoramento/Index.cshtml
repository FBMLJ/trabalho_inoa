@model IEnumerable<MvcMonitoramento.Models.Monitoramento>
@using MvcMoeda.Models



@{
    ViewData["Title"] = "Listagem Monitoramento";
    var moedas = (IEnumerable<Moeda>) ViewData["Moedas"];
    
    
}

<h1>Listagem Monitoramento</h1>

<p>
    <a asp-action="Create">Novo Monitoramento</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome) 
                @ViewData["Message"]
            </th>
            <th>
                Moeda de Origem
            </th>
            <th>
                Moeda Alvo
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorDeVenda)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorDeCompra)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @moedas.First(c => c.Id == item.MoedaOrigemId).Nome
                @* @Html.DisplayFor(modelItem => item.MoedaOrigemId) *@
            </td>
            <td>
                @moedas.First(c => c.Id == item.MoedaAlvoId).Nome
                @* @Html.DisplayFor(modelItem => item.MoedaAlvoId) *@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorDeVenda)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorDeCompra)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalhar</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
