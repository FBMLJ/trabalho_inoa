@using MvcMoeda.Models
@model MvcMonitoramento.Models.Monitoramento


@{
    ViewData["Title"] = "Criar";
    var moedas = (IEnumerable<Moeda>) ViewData["Moedas"];
}

<h1>Criar</h1>

<h4>Monitoramento</h4>
<div style="display: flex;  justify-content: space-between;">
    <h4>Monitoramento</h4>
    <a class=" action-button detalhar_button" href="/Moedas">Criar Moeda</a>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="div-flex-itens">
                <div class="form-group">

                    <label asp-for="MoedaOrigemId" class="control-label"></label>
                    <select name="MoedaOrigemId" id="MoedaOrigemId">
                        
                        @foreach (var moeda in moedas){
                            <option value="@moeda.Id">@moeda.Nome</option>
                        }
                    </select>
                </div>

                <div class="form-group">

                    <label asp-for="MoedaAlvoId" class="control-label"></label>
                    <select name="MoedaAlvoId" id="MoedaAlvoId">
                        
                        @foreach (var moeda in moedas){
                            <option value="@moeda.Id">@moeda.Nome</option>
                        }
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ValorDeVenda" class="control-label"></label>
                <input asp-for="ValorDeVenda" class="form-control" />
                <span asp-validation-for="ValorDeVenda" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorDeCompra" class="control-label"></label>
                <input asp-for="ValorDeCompra" class="form-control" />
                <span asp-validation-for="ValorDeCompra" class="text-danger"></span>
            </div>
            <div class="form-group submits-button">
                <input type="submit" value="Salvar" class="detalhar_button" />
                <a asp-action="Index" class="action-button excluir_button">Voltar</a>
            </div>
        </form>
    </div>
</div>

<div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
